<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiveViewActivity">

    <!--Viewport fragment (AR fragment)-->

    <!--Catalogue fragment-->

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/viewFragment"
        android:name="com.exceptionhandlers.avante_ar.LiveViewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout="@layout/fragment_live_view" />

    <ImageButton
        android:id="@+id/imgBtnCatOpen"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:background="@null"
        android:rotation="90"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/cat_arrow" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/catalogueFragment"
        android:name="com.exceptionhandlers.avante_ar.LiveViewCatalogue"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="#667AFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout="@layout/fragment_live_view_catalogue"
        tools:visibility="invisible" />

    <ImageButton
        android:id="@+id/imgBtnCatClose"
        android:layout_width="70dp"
        android:layout_height="73dp"
        android:background="@null"
        android:rotation="270"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@drawable/cat_arrow" />

    <ToggleButton
        android:id="@+id/tglBtnDepthAPI"
        android:layout_width="106dp"
        android:layout_height="64dp"
        android:layout_marginEnd="48dp"
        android:text="ToggleButton"
        android:textOff="Turn on depth"
        android:textOn="Turn off depth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnCatOpen"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />


</androidx.constraintlayout.widget.ConstraintLayout>